{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  // Do Not Rebase when the default branch is  updated
  "rebaseWhen": "never",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Justfile$"
      ],
      "matchStrings": [
        "(?<justName>.+?)\\s:=\\s\"(?<packageName>.+):(?<currentValue>.+)@(?<currentDigest>sha256:[a-f0-9]+?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    // Auto Merge version/digests
    {
      "automerge": true,
      "matchManagers": [
        "custom.regex",
        "devcontainer",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest",
        "pinDigest"
      ]
    },
    // Auto Merge Dockerfile Digest Updates
    {
      "automerge": true,
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "digest"
      ]
    }
  ]
}
