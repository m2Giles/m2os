{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  // Do Not Rebase when the default branch is  updated
  "rebaseWhen": "never",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Justfile$"
      ],
      "matchStrings": [
        "(?<justName>.+?)\\s:=\\s\"(?<packageName>.+):(?<currentValue>.+)@(?<currentDigest>sha256:[a-f0-9]+?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    // Auto Merge version/digests
    {
      "automerge": true,
      "groupName": "Base Images",
      "matchPackageNames": [
        "ghcr.io/ublue-os/*",
      ]
    },
    {
      "automerge": true,
      "groupName": "Build Containers",
      "matchPackageNames": [
        "ghcr.io/jasonn3/build-container-installer",
        "ghcr.io/hhd-dev/rechunk",
        "ghcr.io/qemus/qemu",
        "cgr.dev/chainguard/cosign",
        "ghcr.io/anchore/syft"
      ]
    },
    {
      "automerge": true,
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest",
        "pinDigest"
      ]
    },
    // Auto Merge Dockerfile Digest Updates
    {
      "automerge": true,
      "matchManagers": [
        "devcontainer",
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ]
    }
  ]
}
