// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "m2os-devcontainer",
	"build": {
		"dockerfile": "Containerfile",
		"args": {
			"USERNAME": "${localEnv:USERNAME}"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": false,
			"installOhMyZsh": false,
			"installOhMyZshConfig": false,
			"username": "${localEnv:USERNAME}"
		},
		// Use Docker in Docker or Docker out of Docker
		"./local-features/docker-out-of-docker/": ""
		// Prefer Docker-in-Docker (Cannot do privileged Mounts for ISOs)
		// "./local-features/docker-in-docker": ""
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"hangxingliu.vscode-systemd-support",
				"mads-hartmann.bash-ide-vscode",
				"ms-azuretools.vscode-docker",
				"sclu1034.justfile",
				"timonwong.shellcheck"
			]
		}
	},
	"runArgs": [
		// Only Needed for Podman (DevPod autohandles)
		// "--userns=keep-id",
		"--name",
		"${containerWorkspaceFolderBasename}-${devcontainerId}"
	],
	"remoteEnv": {
		// For Docker out of Docker (Auto Unsets for Docker in Docker)
		"LOCAL_WORKSPACE_DIR": "${localWorkspaceFolder}"
	},
	"remoteUser": "${localEnv:USERNAME}",
	"containerUser": "${localEnv:USERNAME}"
}
