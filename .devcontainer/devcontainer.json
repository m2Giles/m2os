// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "ublue-os-devcontainer",
	"build": {
		"dockerfile": "Containerfile",
		"args": {
			"USERNAME": "${localEnv:USERNAME}",
			"DOCKER_CONFIG": "IN"
		}
	},
	"mounts": [
		{
			"source": "/tmp",
			"target": "/tmp",
			"type": "bind"
		},
		{
			"source": "/var/run/docker.sock",
			"target": "/var/run/docker-host.sock",
			"type": "bind"
		},
		{
			"source": "devcontainer-docker-volume-m2os",
			"target": "/var/lib/docker",
			"type": "volume"
		}
	],
	"securityOpt": [
		"label=disable",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"hangxingliu.vscode-systemd-support",
				"mads-hartmann.bash-ide-vscode",
				"ms-azuretools.vscode-docker",
				"sclu1034.justfile",
				"timonwong.shellcheck"
			]
		}
	},
	"remoteEnv": {
		// For Docker out of Docker
		"LOCAL_WORKSPACE_DIR": "${localWorkspaceFolder}",
		// Make the Justfile Use docker
		"PODMAN": "docker",
		// SET X by default for Justfile
		"SET_X": "1"
	},
	"privileged": true,
	"init": true,
	"overrideCommand": false
}
